<%= form_for(@review, url: course_reviews_path(@course), remote: true) do |f| %> 
<%# remote: true 為了不讓表單換頁 %>
 
  <div class="field">
    <%= f.label :rating %>
    <%= f.select :rating, [1, 2, 3, 4, 5], include_blank: false, selected:4 %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <div class="action">
    <%= f.submit "送出" %>
  </div>

  <% end %>

